# turn on numlock
numlockx on

# polkit auth
lxpolkit &

# pcmanfm as daemon (for auto-mount)
pcmanfm -d &

# compositor
compton -b &

# background
feh --bg-scale ~/pictures/wallpapers/matt-jones-67740.jpg

# screen settings (temporary hack?)
xrandr --output VGA-1-1 --mode 1280x1024 --right-of HDMI-0

# polybar
polybar main &

# network tray icon
nm-applet &

# volume tray icon
volumeicon &
