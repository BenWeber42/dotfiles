# set hipdi screen to a low dpi resolution
xrandr --output eDP-1 --mode 1280x720

# turn on numlock
numlockx on

# polkit auth
lxpolkit &

# pcmanfm as daemon (for auto-mount)
pcmanfm -d &

# compositor
compton -b &

# background
feh --bg-scale ~/pictures/wallpapers/matt-jones-67740.jpg

# polybar
polybar main &

# network tray icon
nm-applet &

# volume tray icon
volctl &
