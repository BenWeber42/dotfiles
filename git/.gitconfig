[user]
  name = Ben Weber
  email = dev.ben.weber@gmail.com

[push]
  default = simple

[diff]
  tool = meld

[merge]
  tool = meld

[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
  unstage = reset HEAD --
  last = log -1 HEAD
  tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --branches --date-order
